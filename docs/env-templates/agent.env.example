# Commitment Agent Configuration

# Solana Configuration
SOLANA_RPC_URL=https://api.devnet.solana.com
# Get this after deploying your smart contract
PROGRAM_ID=your_program_id_here

# Agent Wallet
# Option 1: Path to keypair file (recommended)
AGENT_KEYPAIR_PATH=~/.config/solana/id.json

# Option 2: Private key as base58 string (alternative)
# AGENT_PRIVATE_KEY=your_private_key_base58_here

# Database Configuration (Supabase)
# Get these from your Supabase project settings
DATABASE_URL=postgresql://postgres:[PASSWORD]@db.[PROJECT].supabase.co:5432/postgres
SUPABASE_URL=https://[PROJECT].supabase.co
SUPABASE_KEY=your_supabase_anon_key_here

# Twitter API (Optional - for social features)
TWITTER_API_KEY=your_twitter_api_key
TWITTER_API_SECRET=your_twitter_api_secret
TWITTER_ACCESS_TOKEN=your_twitter_access_token
TWITTER_ACCESS_TOKEN_SECRET=your_twitter_access_token_secret

# Monitoring Intervals (in seconds)
DCA_CHECK_INTERVAL=86400        # 24 hours
HODL_CHECK_INTERVAL=3600         # 1 hour
LIFESTYLE_CHECK_INTERVAL=300      # 5 minutes
DISTRIBUTION_CHECK_INTERVAL=3600 # 1 hour

# Environment
ENVIRONMENT=development
DEBUG=false

